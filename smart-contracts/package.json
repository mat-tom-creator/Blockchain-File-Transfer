{
    "name": "blockchain-file-transfer-contracts",
    "version": "1.0.0",
    "description": "Ethereum smart contracts for secure file transfer using blockchain",
    "main": "index.js",
    "scripts": {
      "compile": "hardhat compile",
      "test": "hardhat test",
      "test:coverage": "hardhat coverage",
      "deploy:local": "hardhat run scripts/deploy-local.js --network localhost",
      "deploy:goerli": "hardhat run scripts/deploy-testnet.js --network goerli",
      "deploy:sepolia": "hardhat run scripts/deploy-testnet.js --network sepolia",
      "deploy:mainnet": "hardhat run scripts/deploy-mainnet.js --network mainnet",
      "verify:goerli": "hardhat run scripts/verify-contracts.js --network goerli",
      "verify:sepolia": "hardhat run scripts/verify-contracts.js --network sepolia",
      "verify:mainnet": "hardhat run scripts/verify-contracts.js --network mainnet",
      "gas-report": "REPORT_GAS=true hardhat test",
      "size": "hardhat size-contracts",
      "lint": "solhint 'contracts/**/*.sol'",
      "lint:fix": "solhint 'contracts/**/*.sol' --fix",
      "format": "prettier --write 'contracts/**/*.sol'",
      "node": "hardhat node",
      "account": "hardhat accounts"
    },
    "keywords": [
      "ethereum",
      "blockchain",
      "smart-contracts",
      "solidity",
      "file-transfer",
      "dapp"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
      "@nomiclabs/hardhat-ethers": "^2.2.3",
      "@nomiclabs/hardhat-etherscan": "^3.1.7",
      "@nomiclabs/hardhat-waffle": "^2.0.5",
      "@openzeppelin/hardhat-upgrades": "^1.28.0",
      "@typechain/ethers-v5": "^10.2.1",
      "@typechain/hardhat": "^6.1.6",
      "chai": "^4.3.7",
      "dotenv": "^16.3.1",
      "ethereum-waffle": "^4.0.10",
      "ethers": "^5.7.2",
      "hardhat": "^2.17.0",
      "hardhat-contract-sizer": "^2.10.0",
      "hardhat-gas-reporter": "^1.0.9",
      "prettier": "^2.8.8",
      "prettier-plugin-solidity": "^1.1.3",
      "solhint": "^3.4.1",
      "solhint-plugin-prettier": "^0.0.5",
      "solidity-coverage": "^0.8.4",
      "typechain": "^8.2.0"
    },
    "dependencies": {
      "@openzeppelin/contracts": "^4.9.2",
      "@openzeppelin/contracts-upgradeable": "^4.9.2"
    }
  }